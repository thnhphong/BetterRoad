{
  "name": "betterroad",
  "version": "1.0.0",
  "private": true,
  "description": "Road condition management system",
  "scripts": {
    "install:all": "pnpm install -r",
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --filter client build",
    "build:client": "pnpm --filter client build",
    "start": "pnpm --filter server start",
    "start:server": "pnpm --filter server start",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "lint": "pnpm -r --parallel lint",
    "test": "pnpm -r --parallel test"
  },
  "keywords": ["road-management", "pothole-detection", "survey"],
  "author": "BetterRoad Team",
  "license": "MIT"
}
